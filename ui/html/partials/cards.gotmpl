{{define "cards"}}
<div class="cards">
  {{range .Site.Posts}}
  <div class="card">
    <a href="{{.Slug}}">
      {{if .Thumb}}
      <img alt="{{.Title}} picture" loading="lazy" src="{{.Thumb}}" />
      {{end}}
      <div class="card-content">
        <h2>{{.Title}}</h2>
        <h3>{{.TagString}}</h3>
        <p>{{.Summary}}</p>
      </div>
    </a>
  </div>
  {{end}}
</div>
{{end}}
